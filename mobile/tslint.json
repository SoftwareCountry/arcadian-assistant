{
  "rules": {
    //typescript-specific
    "adjacent-overload-signatures": true,
    "member-access": true,
    "member-ordering": [
      true,
      { "order": "instance-sandwich" }
    ],
    "no-any": false,
    "no-inferrable-types": false,
    "no-internal-module": false,
    "no-reference": false,
    "no-var-requires": true,
    "prefer-for-of": true,
    "typedef": [ false ],
    "typedef-whitespace": [ false ],

    //functionality
    "curly": true,
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "no-console": [
      false,
      "info",
      "time",
      "timeEnd",
      "trace",
      "log"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-for-in-array": false,
    "no-invalid-this": true,
    "no-null-keyword": false,
    "no-string-literal": false,
    "no-unsafe-finally": true,
    "no-unused-expression": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": true,
    "restrict-plus-operands": false,
    "switch-default": false,
    "triple-equals": [ true, "allow-null-check", "allow-undefined-check" ],
    "use-isnan": true,

    //maintainability
    "cyclomatic-complexity": [ false, 20 ],
    "eofline": false,
    "indent": [ true, 4 ],
    "linebreak-style": [ false ],
    "max-classes-per-file": [ false ],
    "max-file-line-count": [ true, 500 ],
    "max-line-length": [ true, 300 ],
    "no-default-export": false,
    "no-mergeable-namespace": false,
    "no-require-imports": false,
    "no-trailing-whitespace": false, //the most annoying thing EVER
    "object-literal-sort-keys": false,
    "trailing-comma": [ false ],

    //style
    "align": [ true, "arguments", "parameters", "statements" ],
    "array-type": [ true, "array" ],
    "arrow-parens": false,
    "class-name": true,
    "comment-format": [ false ],
    "completed-docs": [ false ],
    "file-header": [false],
    "interface-name": [ false, "never-prefix" ],
    "interface-name": [ false, "never-prefix" ],
    "jsdoc-format": false,
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-consecutive-blank-lines": [ true, 2 ],
    "no-parameter-properties": false,
    "object-literal-key-quotes": [ true, "consistent" ],
    "object-literal-shorthand": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [ true ],
    "quotemark": [ true, "single", "avoid-escape"],
    "semicolon": [ true, "always", "strict-bound-class-methods" ],
    "variable-name": [ true, "check-format", "allow-pascal-case", "allow-leading-underscore", "ban-keywords" ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
