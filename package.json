{
	"name": "arcadia-assistant",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest --coverage",
		"tsc": "tsc",
		"clean": "rimraf artifacts",
		"build": "npm run clean && npm run lint && npm run tsc --",
		"watch": "npm run build -- -w",
		"prepublish": "npm run build",
		"lint": "tslint src/**/*.ts*"
	},
	"dependencies": {
		"@types/react-native-vector-icons": "^4.4.2",
		"react": "16.0.0-beta.5",
		"react-native": "0.49.5",
		"react-native-vector-icons": "^4.4.2",
		"react-navigation": "^1.0.0-beta.16"
	},
	"devDependencies": {
		"@types/jest": "^21.1.5",
		"@types/react": "^16.0.18",
		"@types/react-native": "^0.49.5",
		"@types/react-navigation": "^1.0.22",
		"babel-jest": "21.2.0",
		"babel-preset-react-native": "4.0.0",
		"concurrently": "^3.5.0",
		"jest": "21.2.1",
		"react-test-renderer": "16.0.0-beta.5",
		"rimraf": "^2.6.2",
		"tslint": "^5.8.0",
		"typescript": "^2.5.3"
	},
	"jest": {
		"preset": "react-native",
		"testRegex": "artifacts/.+\\.(test|spec).js$",
		"coverageDirectory": ".coverage",
		"coverageReporters": [
			"text-summary",
			"html"
		],
		"collectCoverageFrom": [
			"artifacts/**/*.js",
			"!artifacts/**/*.spec.js",
			"!artifacts/**/*.index.js"
		]
	}
}
